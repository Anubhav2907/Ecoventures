    <!DOCTYPE html>
    <html lang="en">

    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width-device-width,initial-scale=1.0">
        <meta http-equiv="X-UA-Compatible" content="sie-edge" />
        <link href="https://unpkg.com/ionicons@4.2.2/dist/css/ionicons.min.css" rel="stylesheet">
        <link rel="stylesheet" type="text/css" href="style.css">
        <title>Slider Form</title>
    </head>

    <body>
        <div class="container2">
            <% if(success && success.length) {%>
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <%= success %>
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span  aria-hidden="true">&times;</span>
                        </button>
                </div>
                <% } %>
                    <% if(error && error.length) {%>
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <%= error %>
                                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                        </div>
                        <% } %>
        </div>
        <div class="container" id="container">
            <div class="form-container sign-up-container">
                <form action="/register" method="post" class="validated-form" novalidate>
                    <h1>Create Account</h1>
                    <div class="social-container">
                        <a href="/facebook" class="social">
                            <ion-icon name="logo-facebook"></ion-icon>
                        </a>
                        <a href="/google" class="social">
                            <ion-icon name="logo-googleplus"></ion-icon>
                        </a>
                    </div>
                    <span class="span">or use your email for registration</span>
                    <div>
                        <input type="text" placeholder="Name" name="username" required>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                        <div class="invalid-feedback">
                            Required!
                        </div>
                    </div>
                    <div>
                        <input type="email" placeholder="Email" name="email" required>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                        <div class="invalid-feedback">
                            Required!
                        </div>
                    </div>
                    <div>
                        <input type="password" placeholder="Password" name="password"  required>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                        <div class="invalid-feedback">
                            Required!
                        </div>
                    </div>
                    <button>Sign Up</button>
                </form>
            </div>
            <div class="form-container sign-in-container">
                <form action="/login" method="post" class="validated-form" novalidate>
                    <h1>Sign In</h1>
                    <div class="social-container">
                        <a href="/facebook" class="social">
                            <ion-icon name="logo-facebook"></ion-icon>
                        </a>
                        <a href="/google" class="social">
                            <ion-icon name="logo-googleplus"></ion-icon>
                        </a>
                    </div>
                    <span class="span">or use your account</span>
                    <div>
                        <input type="text" placeholder="Username" name="username" required>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                    </div>
                    <div>
                        <input type="password" placeholder="Password" name="password" required>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                    </div>
                    <button>Sign In</button>
                </form>
            </div>
            <div class="overlay-container">
                <div class="overlay">
                    <div class="overlay-panel overlay-left">
                        <h1>Welcome Back</h1>
                        <p>To keep connected with us please login with your personal info</p>
                        <button class="ghost" id="signIn">Sign In</button>
                    </div>
                    <div class="overlay-panel overlay-right">
                        <h1>Hello,Friend</h1>
                        <p>Enter your personal details and start journey with us</p>
                        <button class="ghost" id="signUp">Sign Up</button>
                    </div>
                </div>
            </div>
        </div>
        <script src="main.js"></script>
        <script src="https://unpkg.com/ionicons@4.2.2/dist/ionicons.js"></script>
    </body>

    </html>
